{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es3",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"]
  },
  "exclude": ["**/node_modules", "**/__tests__/**", "dist/**"],
  "include": ["next-env.d.ts", "src", "next-with-error.test.ts"]
}
